@using Wedding_Planner.Models
@model WeddPlan


@{
    ViewData["Title"] = "Add a Wedding";
}


<div class="full-height products row remove-padding">
  <div class="col-sm-1 h-100 remove-padding"></div>
  <div class="col-sm-4 h-100 remove-padding">

    <!-- start left content -->
    <h3 class="pt-4 pb-3">Plan Your Wedding</h3>
    
<!-- end grid -->

    <a href="/dashboard"></a>
    <a href="/Logout"></a>
    <form asp-action="addWedding" asp-controller="Home" method="post">
          <div class="form-group">
            <span asp-validation-for="WedderOne"></span>
            <label asp-for="WedderOne">WedderOne</label>
            <input asp-for="WedderOne" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp"
            placeholder="WedderOne">
        </div>
        <div class="form-group">
            <span asp-validation-for="WedderTwo"></span>
            <label asp-for="WedderTwo">Wedder Two</label>
            <input asp-for="WedderTwo" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp"
            placeholder="WedderTwo">
        </div>
        <div class="form-group">
        <span asp-validation-for="WeddingDate"></span>
        <label asp-for="WeddingDate">Wedding Date</label>
        <input asp-for="WeddingDate" type="date">
        </div>
         <div class="form-group">
            <span asp-validation-for="Address"></span>
            <label asp-for="Address">Wedding Address</label>
            <input asp-for="Address" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp"
            placeholder="Wedding Address">
        </div>
        <div class="form-group">
            <button type="submit">Create A Wedding</button>
        </div>
    </form>






<!-- end grid -->
       
    <!-- end left content -->
</div>

